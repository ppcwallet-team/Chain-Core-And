<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="#ffffff"
       android:orientation="vertical"
       android:padding="10dp"
       tools:context=".MainActivity">


      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="5dp"
          android:text="私钥" />

      <TextView
          android:id="@+id/v_private_key"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="50dp"
          android:text="" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="5dp"
          android:text="地址" />

      <TextView
          android:id="@+id/v_address"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="50dp"
          android:text="" />

      <Button
          android:id="@+id/v_private_button"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginBottom="10dp"
          android:background="@color/colorPrimary"
          android:text="获取私钥"
          android:textColor="#fff" />

      <Button
          android:id="@+id/v_address_button"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginBottom="10dp"
          android:background="@color/colorPrimary"
          android:text="获取地址"
          android:textColor="#fff" />

      <Button
          android:id="@+id/v_sign_eth_button"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginBottom="10dp"
          android:background="@color/colorPrimary"
          android:text="ETH转账签名"
          android:textColor="#fff" />
      <Button
          android:id="@+id/v_sign_eth_bkb_button"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_marginBottom="10dp"
          android:background="@color/colorPrimary"
          android:text="BKB-ETH转账签名"
          android:textColor="#fff" />

      <TextView
          android:id="@+id/v_sign_data"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="50dp"
          android:text="" />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="10dp"
          android:text="签名结果" />

      <TextView
          android:id="@+id/v_sign_result"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:minHeight="50dp"
          android:text="" />


   </LinearLayout>
</ScrollView>